[Unit]
Description=Skippy
Requires=graphical-session.target
After=graphical-session.target

StartLimitIntervalSec=60
StartLimitBurst=30

[Service]
Type=simple
RemainAfterExit=true
ExecStart=/usr/local/bin/skippy-xd --start-daemon
StandardOutput=null
Restart=on-failure

[Install]
WantedBy=default.target
